<h1>Find a Movie</h1>
<p>Fill in one of the following text boxes</p>

<%= form_tag("/search-by-title", method: "post") do %>
	<%= label_tag("Title")%>
	<%= text_field_tag(:title) %>
	<%= submit_tag ("submit") %>
<% end %>

<%= form_tag("/search-by-actor", method: "post") do %>
	<%= label_tag("Actors")%>
	<%= text_field_tag(:actor) %>
	<%= submit_tag ("submit") %>
<% end %>

<%= form_tag("/search-by-director", method: "post") do %>
	<%= label_tag("Director")%>
	<%= text_field_tag(:director) %>
	<%= submit_tag ("submit") %>
<% end %>

<% if @response %>
	<ul>
		<% @response.results.each do |result| %>
			<li><%= link_to result.title, movie_show_path(result.id) %></li>
		<% end %>
	</ul>
<% end %>

<% if @cast %>
	<ul>
		<% @cast.results.each do |result| %>
			<% result.known_for.each do |movie| %>
				<li><%= link_to movie.title, movie_show_path(movie.id) %></li>
			<% end %>
	    <% end %>
	</ul>
<% end %>

<% if @director %>
	<ul>
		<% @director.results.each do |result| %>
			<% result.known_for.each do |movie| %>
				<li><%= link_to movie.title, movie_show_path(movie.id) %></li>
				<% end %>
		<% end %>
	</ul>
<% end %>