<div align="center">
<h2>Log in</h2>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <div class=col-sm-2 control-label"><%= f.label :email %></div>
    <div class="col-sm-10">
      <%= f.email_field :email, autofocus: true %>
    </div>
  </div>

  <div class="field">
    <div class=col-sm-2 control-label"><%= f.label :password %></div>
    <div class="col-sm-10">
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
  </div>

<div align="center">
  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
  <% end %>

      <%= render "devise/shared/links" %>
</div>