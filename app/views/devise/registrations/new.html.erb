<div align="center">
<h2>Sign up</h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div class="field">
      <div class=col-sm-2 control-label"><%= f.label :first_name, "First Name" %></div>
      <div class="col-sm-10">
        <%= f.text_field :first_name, autofocus: true, placeholder: "John" %>
      </div>
    </div>

    <div class="field">
      <div class= col-sm-2 control-label"><%= f.label :last_name, "Last Name" %></div>
      <div class="col-sm-10">
        <%= f.text_field :last_name, placeholder: "Doe" %>
      </div>
    </div>


    <div class="field">
      <div class= col-sm-2 control-label"><%= f.label :email %></div>
      <div class="col-sm-10">
       <%= f.email_field :email, placeholder: "john@doe.com" %>
       </div>
    </div>

    <div class="field">
      <div class= col-sm-2 control-label"><%= f.label :password %></div>
      <div class="col-sm-10">
        <%= f.password_field :password, autocomplete: "off", placeholder: "whitelabel" %>
      </div>
    </div>

   <div align="center">
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
    <% end %>
  <%= render "devise/shared/links" %>
  </div>